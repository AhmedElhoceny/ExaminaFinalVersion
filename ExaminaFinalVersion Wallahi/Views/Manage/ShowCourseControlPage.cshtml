@model ExaminaFinalVersion.Models.Courses

@{
    ViewData["Title"] = "ShowCourseControlPage";
    Layout = "~/_Layout4.cshtml";
}

<div style="width: 100%; height: 100px; background: none;"></div>
<div class="PersonContent" style="height:700px">
    <div class="PersonDetails">
        <p>CourseID       :     @(Model.Course_ID)</p>
        <p>CourseName        :     @(Model.Course_Name)</p>
        <p>ProfessorID       :     @(Model.Professor_ID)</p>
        <img src="~/Images/@(Model.Course_Image)" style="width:130px ; height:90px ;" />
    </div>
    <div class="ControlButtons">
        <a asp-action="ShowCourseControlPageDelete" asp-controller="Manage" asp-route-dataID="@Model.Course_ID" asp-route-InfoType="Course" style="        display: block;
        background-color: red;
        border: 1px solid #fff;
        text-align: center;
        width: 150px;
        height: 50px;
        font-size: 41px;
        color: #fff;
        border-radius: 12px;
        cursor: pointer;
">Delete</a>
        <a asp-action="ManagePage" asp-controller="Manage"  style="        display: block;
        background-color: chartreuse;
        border: 1px solid #fff;
        text-align: center;
        width: 150px;
        height: 50px;
        font-size: 41px;
        color: #fff;
        border-radius: 12px;
        cursor: pointer;
">Back</a>
    </div>
</div>